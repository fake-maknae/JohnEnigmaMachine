<Window x:Class="SimpleEnigmaMachine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleEnigmaMachine"
        mc:Ignorable="d"
        Title="Enigma Machine" 
        Height="600" Width="1200"
        ResizeMode="NoResize" TabIndex="0"
        KeyDown="MainWindow_KeyDown"
        KeyUp="MainWindow_KeyUp">


    <Grid
        Background="#F0F0F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Menu
                Background="Transparent"
                FontSize="15"
                Padding="2,4">
                <MenuItem Header="File">
                    <MenuItem
                        x:Name="ImportMenu"
                        Header="Import .csv"
                        Click="ImportMenu_Click"/>
                    <Separator/>
                    <MenuItem Header="Close"/>
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem
                        x:Name="ReflectorModeMenu"
                        Header="Reflector Mode"
                        Click="ReflectorModeMenuItem_Click">
                        <MenuItem.Style>
                            <Style TargetType="MenuItem">
                                <Setter Property="IsCheckable" 
                                        Value="True"/>
                            </Style>
                        </MenuItem.Style>
                    </MenuItem>
                </MenuItem>
            </Menu>

            <Border
                Grid.Row="1"
                CornerRadius="1"
                Background="WhiteSmoke"
                Margin="20,10,20,20">
                <TextBox
                    x:Name="MessageTextBox"
                    FontSize="24"
                    FontWeight="DemiBold"
                    Foreground="#333333"
                    Padding="20"
                    TextWrapping="Wrap"
                    BorderThickness=".5"
                    IsReadOnlyCaretVisible="True"
                    IsReadOnly="True"
                    CaretBrush="DeepSkyBlue"
                    Background="Transparent"
                    TextChanged="MessageTextBox_TextChanged">
                    Your message displays here...
                </TextBox>

            </Border>
        </Grid>

        <Grid
            Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Border 
                CornerRadius="1"
                Background="#8C8C8C"
                Margin="20,50,20,30">
                <TextBox
                    x:Name="EncryptedTextBox"
                    BorderThickness="0"
                    FontSize="20"
                    Foreground="#1C1C26"
                    Background="Transparent"
                    Padding="20"
                    FontWeight="DemiBold"
                    TextWrapping="Wrap"
                    VerticalAlignment="Stretch"
                    IsReadOnly="True"/>

            </Border>

        </Grid>

